const { http, app } = require("../app");
const io = app.get("io");
const chatController = require("../controllers/chatController");

io.on("connection", (socket) => {
  const session = socket.request.session;
  const usuario = session?.usuario;

  if (!usuario) return;

  console.log(`ğŸ’¬ Usuario conectado: ${usuario.nombre}`);

  socket.on("mensaje", (msg) => {
    const data = {
      usuario: usuario.nombre,
      mensaje: msg,
      rol: usuario.rol,
    };

    // Emitimos a todos
    io.emit("mensaje", data);

    // Guardamos en DB usando la tabla correcta
    chatController.guardarMensaje(usuario, msg, usuario.rol);
  });

  socket.on("disconnect", () => {
    console.log(`âŒ Usuario desconectado: ${usuario.nombre}`);
  });
});
