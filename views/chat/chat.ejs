<%- include('../partials/head') %>
<%- include('../partials/header') %>

<!-- ðŸ’¬ Chat de soporte en tiempo real -->
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-chat-dots"></i>
                        <% if (usuario.rol === 'admin' && cliente) { %>
                          Chat con <%= cliente.nombre %>
                        <% } else { %>
                          Chat de Soporte
                        <% } %>
                        <span class="badge bg-danger ms-2" id="statusIndicator">Desconectado</span>
                    </h4>
                </div>
                <div class="card-body p-0">
                    <% if (usuario.rol === 'admin' && clientes.length > 0 && !cliente) { %>
                        <div class="p-3 border-bottom">
                            <label for="clienteSelect" class="form-label">Selecciona un cliente</label>
                            <select id="clienteSelect" class="form-select" onchange="if(this.value) window.location='/chat?cliente=' + this.value;">
                                <option value="">-- Elegir cliente --</option>
                                <% clientes.forEach(c => { %>
                                    <option value="<%= c.id %>"><%= c.nombre %></option>
                                <% }) %>
                            </select>
                        </div>
                    <% } %>
                    <!-- Ãrea de mensajes -->
                    <div id="chat-container" class="p-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                        <div class="text-center text-muted py-3">
                            <i class="bi bi-chat-square-dots" style="font-size: 2rem;"></i>
                            <p class="mt-2">Â¡Bienvenido al chat de soporte!</p>
                            <p class="small">Escribe tu mensaje para comenzar la conversaciÃ³n.</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <!-- Formulario de envÃ­o -->
                    <form id="chatForm" class="d-flex gap-2">
                        <input 
                            type="text" 
                            id="messageInput" 
                            class="form-control" 
                            placeholder="Escribe tu mensaje aquÃ­..."
                            maxlength="500"
                            autocomplete="off"
                            required
                        >
                        <button type="submit" class="btn btn-primary" id="sendButton">
                            <i class="bi bi-send"></i>
                        </button>
                    </form>
                    <div class="form-text mt-2">
                        <i class="bi bi-info-circle"></i> 
                        Conectado como: <strong><%= usuario.nombre %></strong> (<%= usuario.rol %>)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Socket.IO y JavaScript del chat -->
<script src="/socket.io/socket.io.js"></script>
<script>
// ðŸ”Œ ConfiguraciÃ³n de Socket.IO
// ID de la sala de chat. Para un cliente es su propio ID y para un admin es el
// ID del cliente seleccionado. Esto permite que ambos se unan a la misma sala.
const roomUserId = <%= usuario.rol === 'admin' ? (cliente ? cliente.id : 'null') : usuario.id %>;
// Conectamos con el servidor pasando la sala a la que queremos unirnos
const socket = io({ query: { roomUserId } });
const chatContainer = document.getElementById('chat-container');
const chatForm = document.getElementById('chatForm');
const messageInput = document.getElementById('messageInput');
const sendButton = document.getElementById('sendButton');
const statusIndicator = document.getElementById('statusIndicator');
const partnerId = <%= usuario.rol === 'admin' && cliente ? cliente.id : 'null' %>;
const isAdmin = '<%= usuario.rol %>' === 'admin';

const isAdminWithoutClient = '<%= usuario.rol %>' === 'admin' && roomUserId === 'null';
// Si el admin aÃºn no ha elegido un cliente se deshabilita el envÃ­o de mensajes
// hasta que seleccione uno.
if (isAdminWithoutClient) {
  messageInput.disabled = true;
  sendButton.disabled = true;
}

// Cargar mensajes anteriores
// Endpoint para obtener los mensajes histÃ³ricos de la conversaciÃ³n. Si el
// usuario es administrador y ha seleccionado un cliente, se indican los mensajes
// de ese cliente concreto.
const messagesUrl = '/api/mensajes<%= usuario.rol === 'admin' && cliente ? '?usuario_id=' + cliente.id : '' %>';
if (!isAdminWithoutClient) {
  fetch(messagesUrl)
    .then(r => r.json())
    .then(data => { data.forEach(addMessageToChat); });
}

// ðŸ‘¤ InformaciÃ³n del usuario actual
const currentUser = {
    nombre: '<%= usuario.nombre %>',
    rol: '<%= usuario.rol %>'
};

// ðŸ“¨ Enviar mensaje
chatForm.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const mensaje = messageInput.value.trim();
    if (mensaje === '') return;
    
    // Enviar mensaje al servidor
    socket.emit('mensaje', {
        usuario: currentUser.nombre,
        mensaje: mensaje,
        rol: currentUser.rol,
        para: roomUserId
    });
    
    // Limpiar input
    messageInput.value = '';
    messageInput.focus();
});

// ðŸ“¥ Recibir mensajes
socket.on('mensaje', (data) => {
    addMessageToChat(data);
});

// ðŸ”— Eventos de conexiÃ³n
function updateStatus(online) {
    // Cambiamos el indicador visual segÃºn si la otra persona estÃ¡ conectada
    statusIndicator.textContent = online ? 'En lÃ­nea' : 'Desconectado';
    statusIndicator.className = online ? 'badge bg-success ms-2' : 'badge bg-danger ms-2';
}

socket.on('connect', () => {
    socket.emit('getUserStatus', isAdmin ? partnerId : 'admin');
});

socket.on('userStatus', (data) => {
    if (isAdmin) {
        if (partnerId !== 'null' && data.userId == partnerId) {
            updateStatus(data.online);
        }
    } else {
        if (data.role === 'admin' || data.userId === 'admin') {
            updateStatus(data.online);
        }
    }
});

// ðŸ’¬ FunciÃ³n para agregar mensaje al chat
function addMessageToChat(data) {
    const messageDiv = document.createElement('div');
    messageDiv.className = 'mb-3';
    
    const isOwnMessage = data.usuario === currentUser.nombre;
    const messageClass = isOwnMessage ? 'chat-message own' : 'chat-message other';
    
    // Usar la marca de tiempo proporcionada o formatear la de la base de datos
    const timestamp = data.timestamp || (data.fecha ? new Date(data.fecha).toLocaleTimeString('es-ES', {
        hour: '2-digit',
        minute: '2-digit'
    }) : new Date().toLocaleTimeString('es-ES', {
        hour: '2-digit',
        minute: '2-digit'
    }));
    
    messageDiv.innerHTML = `
        <div class="${messageClass}">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <strong>${data.usuario}</strong>
                    ${data.rol ? `<span class="badge bg-secondary ms-1">${data.rol}</span>` : ''}
                </div>
                <small class="text-muted">${timestamp}</small>
            </div>
            <div class="mt-1">${escapeHtml(data.mensaje)}</div>
        </div>
    `;
    
    chatContainer.appendChild(messageDiv);
    
    // Scroll automÃ¡tico hacia abajo
    chatContainer.scrollTop = chatContainer.scrollHeight;
    
    // Limpiar mensaje de bienvenida si existe
    const welcomeMessage = chatContainer.querySelector('.text-center');
    if (welcomeMessage) {
        welcomeMessage.remove();
    }
}

// ðŸ›¡ï¸ FunciÃ³n para escapar HTML y prevenir XSS
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// ðŸŽ¯ Enfocar input al cargar la pÃ¡gina
messageInput.focus();

// âŒ¨ï¸ Enviar mensaje con Enter
messageInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        chatForm.dispatchEvent(new Event('submit'));
    }
});
</script>
<%- include('../partials/footer') %>
