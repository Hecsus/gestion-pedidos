<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body class="d-flex flex-column min-vh-100">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="bi bi-box-seam"></i> Gesti贸n de Pedidos
        </a>
    </div>
</nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <!--  Formulario de inicio de sesi贸n -->
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card shadow">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <i class="bi bi-box-arrow-in-right text-primary" style="font-size: 3rem;"></i>
                                <h2 class="mt-3">Iniciar Sesi贸n</h2>
                                <p class="text-muted">Accede a tu cuenta</p>
                            </div>

                            <!-- Mostrar mensaje de registro exitoso -->
                            <% if (typeof query !== 'undefined' && query.registered) { %>
                                <div class="alert alert-success" role="alert">
                                    <i class="bi bi-check-circle"></i> 
                                    Registro exitoso. Ya puedes iniciar sesi贸n.
                                </div>
                            <% } %>

                            <!-- Mostrar errores de validaci贸n -->
                            <% if (errors && errors.length > 0) { %>
                                <div class="alert alert-danger" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <ul class="mb-0 mt-2">
                                        <% errors.forEach(error => { %>
                                            <li><%= error.msg %></li>
                                        <% }) %>
                                    </ul>
                                </div>
                            <% } %>

                            <!-- Formulario de login -->
                            <form action="/auth/login" method="POST" novalidate>
                                <div class="mb-3">
                                    <label for="email" class="form-label">
                                        <i class="bi bi-envelope"></i> Email
                                    </label>
                                    <input 
                                        type="email" 
                                        class="form-control" 
                                        id="email" 
                                        name="email" 
                                        value="<%= oldData.email || '' %>"
                                        required
                                        autocomplete="email"
                                    >
                                </div>

                                <div class="mb-4">
                                    <label for="password" class="form-label">
                                        <i class="bi bi-lock"></i> Contrase帽a
                                    </label>
                                    <input 
                                        type="password" 
                                        class="form-control" 
                                        id="password" 
                                        name="password" 
                                        required
                                        autocomplete="current-password"
                                    >
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesi贸n
                                    </button>
                                </div>
                            </form>

                            <hr class="my-4">

                            <div class="text-center">
                                <p class="mb-0">驴No tienes cuenta?</p>
                                <a href="/auth/register" class="btn btn-outline-primary">
                                    <i class="bi bi-person-plus"></i> Registrarse
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
